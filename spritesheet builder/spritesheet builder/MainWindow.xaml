<Window x:Class="spritesheet_builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="476" Width="765">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="729*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Add sprites..." HorizontalAlignment="Left" Margin="0,94,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Column="2" Height="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="This is a sprite sheet generation tool. It will take a bunch of sprites and combine them into a sprite sheet." Height="79" Width="175" Grid.Column="2"/>
        <Button Content="Build sprite sheet." HorizontalAlignment="Left" Margin="0,121,0,0" VerticalAlignment="Top" Width="111" Grid.Column="2" Height="22"/>
        <Image x:Name="ImageArea" Margin="180,10,0,0" Grid.Column="2" Stretch="None"/>

    </Grid>
</Window>
